{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "secondary_prompt": {
        "template": "❯ ",
        "foreground": "#D6DEEB",
        "background": "transparent"
    },
    "transient_prompt": {
        "template": "\ue285 ",
        "foreground": "#FEF5ED",
        "background": "transparent"
    },
    "console_title_template": "{{ if .Root }}root @ {{ end }}{{ .Shell }} in {{ .Folder }}",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "properties": {
                        "alpine": "\uf300",
                        "arch": "\uf303",
                        "cache_duration": "none",
                        "centos": "\uf304",
                        "debian": "\uf306",
                        "elementary": "\uf309",
                        "fedora": "\uf30a",
                        "gentoo": "\uf30d",
                        "linux": "\ue712",
                        "macos": "\ue711",
                        "manjaro": "\uf312",
                        "mint": "\uf30f",
                        "opensuse": "\uf314",
                        "raspbian": "\uf315",
                        "ubuntu": "\uebc9",
                        "windows": "\ue70f"
                    },
                    "template": " {{ .Icon }} ",
                    "foreground": "#D6DEEB",
                    "background": "#575656",
                    "type": "os",
                    "style": "diamond"
                },
                {
                    "properties": {
                        "cache_duration": "none"
                    },
                    "template": "{{if .Root}} \uf0e7 {{.UserName}} {{else}} {{.UserName}} {{end}}",
                    "foreground": "#011627",
                    "powerline_symbol": "\ue0b0",
                    "background": "#00C7FC",
                    "type": "session",
                    "style": "powerline"
                },
                {
                    "properties": {
                        "cache_duration": "none",
                        "home_icon": "~",
                        "style": "full"
                    },
                    "template": " \uf07c {{ .Path }} ",
                    "foreground": "#e4e4e4",
                    "powerline_symbol": "\ue0b0",
                    "background": "#3465a4",
                    "type": "path",
                    "style": "powerline"
                },
                {
                    "properties": {
                        "branch_icon": "\ue725 ",
                        "cache_duration": "none",
                        "cherry_pick_icon": "\ue29b ",
                        "commit_icon": "\uf417 ",
                        "fetch_status": false,
                        "fetch_upstream_icon": false,
                        "merge_icon": "\ue727 ",
                        "no_commits_icon": "\uf0c3 ",
                        "rebase_icon": "\ue728 ",
                        "revert_icon": "\uf0e2 ",
                        "tag_icon": "\uf412 "
                    },
                    "template": " {{ .HEAD }} ",
                    "foreground": "#f0efe7",
                    "powerline_symbol": "\ue0b0",
                    "background": "#f14e32",
                    "type": "git",
                    "style": "powerline"
                },
                {
                    "properties": {
                        "cache_duration": "none",
                        "display_mode": "environment",
                        "fetch_virtual_env": true,
                        "home_enabled": true
                    },
                    "template": " \ue73c {{ if .Venv }}({{ .Venv }}){{ end }} ",
                    "foreground": "#011627",
                    "powerline_symbol": "\ue0b0",
                    "background": "#FFDE57",
                    "type": "python",
                    "style": "powerline"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "right",
            "segments": [
                {
                    "properties": {
                        "always_enabled": true,
                        "cache_duration": "none"
                    },
                    "template": " {{ if gt .Code 0 }}\uf00d{{ else }}\uf00c{{ end }} ",
                    "foreground": "#414141",
                    "background": "lightGreen",
                    "type": "status",
                    "style": "powerline",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}#D6DEEB{{ end }}"
                    ],
                    "background_templates": [
                        "{{ if gt .Code 0 }}#E44141{{ end }}"
                    ],
                    "invert_powerline": true
                },
                {
                    "properties": {
                        "cache_duration": "none",
                        "style": "roundrock",
                        "threshold": 0
                    },
                    "template": " {{ .FormattedMs }} ",
                    "foreground": "#D6DEEB",
                    "background": "#575656",
                    "type": "executiontime",
                    "style": "diamond",
                    "invert_powerline": true
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "properties": {
                        "always_enabled": true,
                        "cache_duration": "none"
                    },
                    "template": "❯ ",
                    "foreground": "#D6DEEB",
                    "type": "status",
                    "style": "plain"
                }
            ],
            "newline": true
        }
    ],
    "version": 3
}
